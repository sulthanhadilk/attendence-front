# Environment Configuration for EduTrack Frontend

# API Base URL - Point this to your backend server
VITE_API_BASE_URL=http://localhost:4000
# For production (Render deployment):
# VITE_API_URL=https://attendance-back-byl9.onrender.com

# Application Configuration
VITE_APP_NAME=EduTrack
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=College Attendance Management System

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Optional: Analytics and Monitoring
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_SENTRY_DSN=your_sentry_dsn

# Optional: Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PRINT_MODE=true
VITE_ENABLE_EXPORT_FEATURES=true

# Demo Mode (for testing)
VITE_DEMO_MODE=true
VITE_SHOW_DEMO_CREDENTIALS=true